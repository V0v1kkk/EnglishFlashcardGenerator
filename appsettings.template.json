{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "FilePaths": {
    "SourceNotePath": "/path/to/your/notes.md",
    "ResultCardsFolderPath": "/path/to/your/flashcards/folder/",
    "ResultNotesFolderPath": "/path/to/your/notes/folder/",
    "CardTemplatePath": "cardTemplate.md",
    "NoteTemplatePath": "noteTemplate.md"
  },
  "Providers": [
    {
      "Name": "Default",
      "Type": "Azure",
      "Azure": {
        "ApiKey": "your-azure-api-key",
        "Endpoint": "https://your-resource-name.openai.azure.com/",
        "ModelName": "your-deployment-name",
        "ApiVersion": "2024-08-01-preview",
        "UseTemperature": true,
        "UseCompletionTokens": false
      }
    },
    {
      "Name": "OpenAIProvider",
      "Type": "OpenAI",
      "OpenAI": {
        "ApiKey": "your-openai-api-key",
        "ModelName": "gpt-4o-2024-08-06",
        "UseTemperature": true,
        "UseCompletionTokens": false
      }
    },
    {
      "Name": "OpenRouterProvider",
      "Type": "OpenRouter",
      "OpenRouter": {
        "ApiKey": "your-openrouter-api-key",
        "Endpoint": "https://openrouter.ai/api/",
        "ModelName": "openai/o1-mini",
        "UseTemperature": true,
        "UseCompletionTokens": false
      }
    },
    {
      "Name": "AzureGPT35",
      "Type": "Azure",
      "Azure": {
        "ApiKey": "your-azure-api-key",
        "Endpoint": "https://your-resource-name.openai.azure.com/",
        "ModelName": "your-gpt35-deployment-name",
        "ApiVersion": "2024-08-01-preview",
        "UseTemperature": true,
        "UseCompletionTokens": false
      }
    },
    {
      "Name": "AzureGPT4",
      "Type": "Azure",
      "Azure": {
        "ApiKey": "your-azure-api-key",
        "Endpoint": "https://your-resource-name.openai.azure.com/",
        "ModelName": "your-gpt4-deployment-name",
        "ApiVersion": "2024-08-01-preview",
        "UseTemperature": true,
        "UseCompletionTokens": false
      }
    },
    {
      "Name": "O3Mini",
      "Type": "OpenAI",
      "OpenAI": {
        "ApiKey": "your-openai-api-key",
        "ModelName": "o3-mini-2025-01-31",
        "UseTemperature": false,
        "UseCompletionTokens": true
      }
    }
  ],
  "Agents": {
    "TeacherAgent": {
      "ProviderName": "AzureGPT4",
      "Temperature": 0.7,
      "MaxTokens": 16384
    },
    "ReviewerAgent": {
      "ProviderName": "AzureGPT4",
      "Temperature": 1.0,
      "MaxTokens": 16384
    },
    "ExtractorAgent": {
      "ProviderName": "AzureGPT35",
      "Temperature": 0.2,
      "MaxTokens": 16384
    }
  }
}